<% layout('layouts/boilerplate') %>
<!-- <div class="d-flex justify-content-center align-items-center"> -->
    <div class="row d-flex align-items-center">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://res.cloudinary.com/duky4cmld/image/upload/w_600/v1750846586/peter-vanosdall-6pVTxAaX448-unsplash_x7y4ep.jpg" alt="" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">Register</h5>
                    <form action="/register" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username : </label>
                            <input class="form-control" type="text" id="username" name="username" autofocus required>
                            <div class="valid-feedback">
                    Looks good!
                    </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="email">Email : </label>
                            <input class="form-control" type="email" id="email" name="email" required>
                            <div class="valid-feedback">
                    Looks good!
                    </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password : </label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                    Looks good!
                    </div>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-block">Register</button>
                        </div>
                    </form>
            </div>
            </div>
        </div>
    </div>
<!-- </div> -->